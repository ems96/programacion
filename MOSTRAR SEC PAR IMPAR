#include "conio.h"
#include <iostream>

using namespace std;
 
void mostrarsecimpares(int n){
       int i,imp=1;
	   for(i=1;i<=n;i++){
	   cout<<imp<<",  ";
	   imp=imp+2;
	   }
   }
   
   
   
  void mostrarsecparimp(int n){
	  int i,impar=1,par=2,k=0;
	  for(i=1;i<=n;i++){
		  if(k==0){
		  cout<<par<<", ";
	      par=par+2;
	      k=1;
	      }else{
	  cout<<impar<<", ";
      impar=impar+2;
	  k=0;
	  
	  }

     }
  }
	  
	  
	 
	  


  
   
   
   
   
   
   void main(){
   int n;
   cout<<"Cuantos numeros a mostrar?";
   cin>>n;
   mostrarsecparimp( n); 
   getch();
   }
