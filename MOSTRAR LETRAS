#include "conio.h"
#include <iostream>

using namespace std;
 
  void mostrarletras(int n){
	  int i,k=0;
	  for(i=1;i<=n;i++){
		  if(k==0){
		  cout<<"a, ";
	      k=1;
	      }else{
			  if(k==1){
         	      cout<<"b, ";
	              k=2;
			  }else{
				 
                  cout<<"c, ";
	              k=0;
			  }

	  }

     }
  }
	  
	  
	 
	  


  
   
   
   
   
   
   void main(){
   int n;
   cout<<"Cuantas letras desea a mostrar?";
   cin>>n;
   mostrarletras ( n); 
   getch();
   }
